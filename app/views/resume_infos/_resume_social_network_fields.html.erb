<div class="wrapper-div form-row" style="display: flex; padding: 3px;">
  <%= form.hidden_field :_destroy %>

  <div class="form-group col-md-3" >
    <%= form.input :social_network_id, as: :select, collection: @social_networks,
                   label_method: :name,
                   value_method: :id,
                   label: "Social Network", include_blank: false %>
  </div>

  <div class="form-group col-md-5" >
    <%= form.input :url, class: '', style: "", label: 'Profile URL' %>
  </div>

  <div class="form-group col-md-2" style="; text-align: center;">
    <%= form.label ' ' %>
    <%= form.input :show, as: :boolean, :input_html => {checked: form.object.new_record? || form.object.show?}, style: 'align-self-center; margin-top: 17px;', label: 'Show Profile' %>
  </div>

  <div class="form-group col-md-2 align-self-center " style="margin-top: 20px; ">
    <%= link_to_remove_nested(form, link_text: "Remove Social Network", link_classes: 'btn btn-danger', fields_wrapper_selector: '.wrapper-div') %>
  </div>

</div>