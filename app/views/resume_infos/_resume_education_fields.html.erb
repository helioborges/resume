<div class="wrapper-div form-row" style="padding: 3px;">

  <div class="form-row" style="display: flex; padding: 3px;">
    <%= form.hidden_field :_destroy %>

    <div class="form-group col-md-1">
      <%= form.input :year_start, class: '', style: "" %>
    </div>

    <div class="form-group col-md-1">
      <%= form.input :year_end, class: '', style: "" %>
    </div>

    <div class="form-group col-md-5">
      <%= form.input :title, class: '', style: "" %>
    </div>

    <div class="form-group col-md-5">
      <%= form.input :institution, class: '', style: "", label: "@ Institution:" %>
    </div>
  </div>

  <div class="form-row" style="display: flex; padding: 3px;">
    <div class="form-group col-md-4">
      <%= form.input :description, class: '', style: "" %>
    </div>

    <div class="form-group col-md-4">
      <%= form.input :url, class: '', style: "" %>
    </div>

    <div class="form-group col-md-2" style="; text-align: center;">
      <%= form.label ' ' %>
      <%= form.input :show, as: :boolean, input_html:  {checked: form.object.new_record? || form.object.show?}, style: 'align-self-center; margin-top: 17px;', label: 'Show Education' %>
    </div>

    <div class="form-group col-md-2 align-self-center " style="margin-top: 20px; ">
      <%= link_to_remove_nested(form, link_text: "Remove Education", link_classes: 'btn btn-danger', fields_wrapper_selector: '.wrapper-div') %>
    </div>

  </div>

</div>