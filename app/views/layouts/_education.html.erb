<section class="section-md">
  <div class="container">
    <div class="row" style="border: 0px solid #00f">
      <div class="col-12">
        <h4 class="header-title mb-3">Education, Employment & Skills</h4>
      </div><!--end col-->

      <div class="col-sm-12 col-print-12" style="border: 0px solid #0f0">

        <div class="row" style="border: 0px solid #f00">

          <div class="col-sm-4 col-print-4">
            <div class="resume-icon">
              <i class="uil uil-graduation-hat"></i>
              <h5 class="mt-n2">Education</h5>
            </div><!--end resume-icon-->
            <div class="timeline">

              <% for education in @resume_info.resume_educations.order(Arel.sql(' year_end IS NOT NULL, year_end desc, year_start desc ')) do %>

                <% if education.show %>
                  <div class="time-item" title="<%= education.description %>">
                    <div class="item-info">

                      <h5 class="my-1 text-info">
                        <%= education.year_start %>
                        - <%= education.year_end ? education.year_end : 'Now' %>
                      </h5>

                      <h5 class="my-1 text-custom">
                        <%= education.title %>
                      </h5>

                      <p>
                        <% if education.url.present? %>
                          <!-- <i class="fa fa-arrow-alt-circle-right"></i>-->
                          @  <%= link_to education.institution, education.clean_url, target: '_blank', style: 'text-decoration: underline;', title: education.clean_url %>
                        <% else %>
                          @  <%= education.institution %>
                        <% end %>
                      </p>

                      <% if education.description %>
                        <p> <%= education.description %> </p>
                      <% end %>

                    </div>
                  </div><!--end time-item-->

                <% end %>
              <% end %>
            </div>
          </div><!--end col-->

          <div class="col-sm-4 col-print-4">
            <div class="resume-icon">
              <i class="uil uil-suitcase-alt"></i>
              <h5 class="mt-n2">Employment</h5>
            </div><!--end resume-icon-->
            <div class="timeline" >

              <% for experience in @resume_info.resume_experiences.order(Arel.sql(' year_end IS NOT NULL, year_end desc, year_start desc ')) do %>

                <% if experience.show %>
                  <div class="time-item" title="<%= experience.description %>">
                    <div class="item-info">

                      <h5 class="my-1 text-info">
                        <%= experience.year_start %>
                        - <%= experience.year_end ? experience.year_end : 'Now' %>
                      </h5>

                      <h5 class="my-1 text-custom">
                        <%= experience.title %>
                      </h5>

                      <p>
                        <% if experience.url.present? %>
                          <!-- <i class="fa fa-arrow-alt-circle-right"></i>-->
                          @  <%= link_to experience.company, experience.clean_url, target: '_blank', style: 'text-decoration: underline;', title: experience.clean_url %>
                        <% else %>
                          @  <%= experience.company %>
                        <% end %>
                      </p>

                      <% if experience.description %>
                        <p> <%= experience.description %> </p>
                      <% end %>

                    </div>
                  </div><!--end time-item-->

                <% end %>
              <% end %>


            </div><!--end timeline-->
          </div><!--end col-->

          <div class="col-sm-4 col-print-4">
            <div class="resume-icon">
              <i class="uil uil-lightbulb-alt"></i>
              <h5 class="mt-n2">Skills</h5>
            </div><!--end skills-icon-->

            <div class="timeline" style="border: 0">
              <% for skill in @resume_info.resume_skills.order(level: :desc, id: :asc) do %>

                <div class="skills mt-4 " title="<%= skill.description %>">
                  <div class="skill-box">
                    <h4 class="skill-title time-item" style="padding-left: 10px; margin-bottom: 3px;">
                      <%= skill.name %>
                    </h4>
                    <div class="progress-line" style="margin-left: 10px;">
                        <span data-percent="<%= skill.level %>" style="width: <%= skill.level %>%;">
                          <span class="percent-tooltip">
                              <%= skill.level %>%
                          </span>
                        </span>
                    </div>
                  </div><!--end skill-box-->

              <% end %>

              </div><!--end skill-->

            </div><!--end col-->
          </div><!--end col-->

        </div><!--end row-->

      </div><!--end col-->


    </div><!--end row-->
  </div><!--end container-->
</section><!--end section-->