<div class="wrapper-div form-row" style="display: flex; padding: 3px;">
  <%= form.hidden_field :_destroy %>

  <div class="form-group col-md-7" style="">
    <%= form.input :email, class: '', style: "" %>
  </div>

  <div class="form-group col-md-3" style="border: 0px solid blue">
    <%= form.input :email_type, as: :select, collection: ResumeEmail.list_types, include_blank: false %>
  </div>

  <div class="form-group col-md-2 align-self-center " style="margin-top: 20px; ">
    <%= link_to_remove_nested(form, link_text: "Remove E-mail", link_classes: 'btn btn-danger', fields_wrapper_selector: '.wrapper-div') %>
  </div>

</div>